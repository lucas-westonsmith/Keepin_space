<div class="poll-option-fields" data-poll-form-target="option">
  <div class="form-group">
    <%= f.text_field :content, class: "form-control", placeholder: "Option content" %>
  </div>
  <div class="form-group">
    <%= f.number_field :votes_count, value: 0, class: "form-control", hidden: true %> <!-- votes_count initialisé à 0 -->
  </div>
  <div class="form-actions">
    <%= link_to 'Remove', '#', class: 'btn btn-danger remove-option', data: { action: "poll-form#removeOption" } %>
  </div>
</div>
