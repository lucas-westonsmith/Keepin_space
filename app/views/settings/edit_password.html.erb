<div class="change-password-container">
  <div class="change-password-header">
    <h2>Change your password</h2>
    <p>Enter your current password and set a new one.</p>
  </div>

  <%= form_for current_user, url: edit_password_path, method: :patch do |f| %>
    <!-- ✅ Mot de passe actuel -->
    <div class="form-group">
      <%= f.label :current_password, "Current password" %>
      <%= f.password_field :current_password, class: "form-control", placeholder: "Enter current password", required: true %>
    </div>

    <!-- ✅ Nouveau mot de passe -->
    <div class="form-group">
      <%= f.label :password, "New password" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter new password", required: true %>
    </div>

    <!-- ✅ Confirmation du mot de passe -->
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm new password", required: true %>
    </div>

    <div class="form-actions">
      <%= f.submit "Change my password", class: "btn btn-primary action-btn" %>
    </div>
  <% end %>

  <div class="change-password-footer">
    <%= link_to "Back to profile", profile_path(current_user), class: "btn-secondary" %>
  </div>
</div>
