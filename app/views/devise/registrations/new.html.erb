<div class="signup-container">
  <div class="signup-header">
    <h2>Create your account</h2>
    <p>Join KeepinSpace and start networking effortlessly!</p>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
    <%= f.error_notification %>

    <!-- ✅ Ligne 1 : First name | Last name | Phone number -->
    <div class="form-row">
      <%= f.input :first_name, required: true, label: "First name", input_html: { class: "form-control", placeholder: "First name" } %>
      <%= f.input :last_name, required: true, label: "Last name", input_html: { class: "form-control", placeholder: "Last name" } %>
      <%= f.input :phone_number, required: false, label: "Phone number", input_html: { class: "form-control", placeholder: "Phone number (optional)" } %>
    </div>

    <!-- ✅ Ligne 2 : Email | Password | Confirm Password -->
    <div class="form-row">
      <%= f.input :email, required: true, label: "Email", input_html: { class: "form-control", autocomplete: "email", placeholder: "Email" } %>
      <%= f.input :password, required: true, label: "Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "form-control", autocomplete: "new-password", placeholder: "Password" } %>
      <%= f.input :password_confirmation, required: true, label: "Confirm password", input_html: { class: "form-control", autocomplete: "new-password", placeholder: "Confirm password" } %>
    </div>

    <!-- ✅ Actions -->
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-primary action-btn" %>
    </div>
  <% end %>

  <div class="signup-footer">
    <p>Already have an account? <%= link_to "Log in", new_user_session_path %></p>
  </div>
</div>
