<div class="login-container">
  <div class="login-header">
    <h2>Log in</h2>
    <p>Welcome back! Please enter your credentials to continue.</p>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <%= f.error_notification %>

    <!-- ✅ Ligne 1 : Email | Password -->
    <div class="form-row">
      <%= f.input :email, required: true, label: "Email", input_html: { class: "form-control", autocomplete: "email", placeholder: "Email" } %>
      <%= f.input :password, required: true, label: "Password", input_html: { class: "form-control", autocomplete: "current-password", placeholder: "Password" } %>
    </div>

    <!-- ✅ Remember me -->
    <% if devise_mapping.rememberable? %>
      <div class="form-group remember-me">
        <%= f.check_box :remember_me, class: "form-check-input", id: "remember-me-checkbox" %>
        <%= f.label :remember_me, "Remember me", class: "form-check-label", for: "remember-me-checkbox" %>
      </div>
    <% end %>

    <!-- ✅ Actions -->
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary action-btn" %>
    </div>
  <% end %>

  <div class="login-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
